@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>;

<div class="row">
    <div class="col-6">
        <h2 class="text-primary"> Role List </h2>
    </div>
    <div class="col-6 text-right justify-content-end">
        <a asp-controller="Role" asp-action="Upsert" class="btn btn-primary"> Create new role </a>

    </div>
</div>

<div class="p-4 border rounded">
    @if (Model.Any())
    {
        <table class="table table-striped border">
            <tr>
                <th>ID</th>
                <th>NAME</th>
                @*For Buttons*@
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.Id</th>
                    <th>@item.Name</th>
                    @*For Buttons*@
                    <th>
                        <div class="text-center">
                            <form asp-action="Delete" asp-route-id="@item.Id">
                                <a asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-warning btn-info text-white" style="cursor:pointer;">Edit</a>
                                <button type="submit" onclick="return confirm('Are you sure that you want to delete the role?')" class="btn btn-danger">delete</button>
                            </form>
                        </div>
                    </th>
                </tr>
            }
        </table>
    }
</div>